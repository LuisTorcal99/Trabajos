<UserControl x:Class="BasicAPP.Controls.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BasicAPP.Controls" 
             xmlns:viewmodel="clr-namespace:BasicAPP.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="GhostWhite">
    <Grid>
        <Menu FontSize="20" Grid.Row="0" HorizontalAlignment="Center" Margin="0,15,0,15">
            <MenuItem Header="_Grid"
              Command="{Binding SelectViewModelCommand}"
              CommandParameter="{Binding DatosGridViewModel}"
              Foreground="Black"/>
            <MenuItem Header="Prueba"
              Command="{Binding SelectViewModelCommand}"
              CommandParameter="{Binding DatosGridViewModel}"
              Foreground="Black"/>
        </Menu>
    </Grid>
</UserControl>
